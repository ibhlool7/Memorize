<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddWordActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/lightOrange"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/header">
                <ImageView
                    android:layout_width="56dp"
                    android:id="@+id/back"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Add Word"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/dialog_top"
                app:layout_constraintTop_toBottomOf="@id/header"
                tools:layout_editor_absoluteX="0dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintBottom_toBottomOf="@id/image"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/white_glassy">
                <EditText
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:id="@+id/word"
                    android:textSize="22sp"
                    android:hint="word"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/image"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:id="@+id/dr"
                android:layout_marginLeft="30dp"
                android:background="@drawable/black_glassy">
                <EditText
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/definition"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/cream"
                    android:textSize="20sp"
                    android:hint="definition"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/dr"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:minHeight="100dp"
                android:id="@+id/er"
                android:layout_marginLeft="30dp"
                android:background="@drawable/black_glassy">
                <EditText
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/examples"
                    android:gravity="left|top"
                    android:textColor="@color/white"
                    android:textColorHint="@color/cream"
                    android:textSize="20sp"
                    android:hint="examples"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/er"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:id="@+id/nr"
                android:layout_marginLeft="30dp"
                android:background="@drawable/black_glassy">
                <EditText
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nativeLanguage"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/cream"
                    android:textSize="20sp"
                    android:hint="native"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/nr"
                android:layout_marginTop="50dp"
                android:id="@+id/or"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/orange_button">
                <TextView
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/cream"
                    android:textSize="20sp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:layout_centerInParent="true"
                    android:text="Save"/>
            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>